<h2><a><%= @investment.name %></a></h2>
        <form action="/investments/<%=@investment.id%>/edit" method="POST">
                <div class="form-group">
  	        <input type="hidden" name="_method" id="hidden" value="PATCH">
                <input type="text" class="form-control" name="name" value="<%= @investment.name %>"> <br>
                <input type="date" class="form-control"  name="date" value="<%= @investment.date%>"> <br>
                <input type="number" class="form-control"  name="amount" value="<%= @investment.amount %>"> <br>
                <select class="form-control" name="kind" value="<%= @investment.kind %>">
                        <option value="Stock">Stock</option>
                        <option value="Real Estate">Real Estate</option>
                        <option value="Equity">Equity</option>
                        <option value="Other">Other</option>
                </select>
                <br>
                <textarea class="form-control"  name="description" placeholder="<%= @investment.description %>" value="<%= @investment.description %>"></textarea> <br>
                </div>

                <input type="submit" value="Update" class="btn btn-primary">
		</form>